<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <!-- TODO: Update blank fragment layout -->


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_photo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="15dp"
                android:contentDescription="@string/profile_photo"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/roundedImage"
                app:srcCompat="@drawable/baseline_person_24" />


            <TextView
                android:id="@+id/current_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carlos Sáez Butrón"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/teacher_description"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="50dp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:text="Versátil y adaptable, personaliza las lecciones según el nivel de habilidad y los objetivos específicos, asegurando un progreso constante y efectivo en el pádel."
                android:textSize="14dp" />

            <TextView
                android:id="@+id/teacher_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher Level"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/teacher_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barcelona, Barcelona"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/contact_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:text="Datos de Contacto"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/teacher_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:text="Teacher Email"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/teacher_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher Email"
                android:textSize="14dp" />

            <Button
                android:id="@+id/btn_makeBooking"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="15dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:backgroundTint="@color/grey"
                android:gravity="center"
                android:text="Reservar clase" />


            <TextView
                android:id="@+id/turn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clica para volver"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:textStyle="bold" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>